<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/linearHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_50"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="26dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="38dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="300dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/_904675_configuration_edit_gear_options_preferences_setting_settings_122525" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/img_ellipse32" />
        </LinearLayout>

        <EditText
            android:id="@+id/etSearchHere"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14px"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="14px"
            android:background="@drawable/rectangle_bg_white_a700_border_gray_400_radius_45"
            android:drawableStart="@drawable/img_union_2"
            android:drawablePadding="10px"
            android:ellipsize="end"
            android:hint="@string/hint_Search"
            android:paddingStart="25px"
            android:paddingTop="16px"
            android:paddingBottom="16px"
            android:singleLine="true"
            android:text="@={homeVM.homeModel.etSearchHereValue}"
            android:textColorHint="@color/gray_500" />

        <TextView
            android:id="@+id/txtContact2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="What do you need?"
            android:textColor="@color/bluegray_900"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="83dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_bg_white_a700_border_gray_500_radius_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_iconnote" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appointments record "
                    android:textColor="#0E2535"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lists all appointments and its informations" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="83dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_bg_white_a700_border_gray_500_radius_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_iconcalendar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monthly schedule"
                    android:textColor="#0E2535"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lists all appointment of the month and its informations" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="83dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_bg_white_a700_border_gray_500_radius_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="127dp"
                android:layout_height="83dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/rese" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appointment reservation"
                    android:textColor="#0E2535"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="reserve the appointments and pay for these appointments" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="83dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_bg_white_a700_border_gray_500_radius_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_iconmail" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact us"
                    android:textColor="#0E2535"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact about anything related to our app or services" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>