<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearGroup94"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_50"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearGroup91"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150px"
            android:gravity="start"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="269dp"
                android:layout_height="297dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/img_microsoftteams" />

            <TextView
                android:id="@+id/txtWelcomeToRea"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginStart="57px"
                android:layout_marginTop="65px"
                android:layout_marginEnd="60px"
                android:gravity="center_horizontal"
                android:text="Welcome to Reaâ€™ya"
                android:textColor="@color/bluegray_900"
                android:textSize="27sp" />

            <FrameLayout
                android:id="@+id/frameGroup95"
                android:layout_width="320dp"
                android:layout_height="113dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10px"
                android:layout_marginTop="78px"
                android:layout_marginEnd="10px"
                android:layout_marginBottom="20px">

                <LinearLayout
                    android:id="@+id/linearGroup93"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="3px"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/viewRectangle5"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rectangle_bg_bluegray_600_radius_53" />

                    <ImageView
                        android:id="@+id/imageRectangle6"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="23px"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_rectangle6" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearGroup92"
                    android:layout_width="137dp"
                    android:layout_height="114dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="40px"
                    android:layout_marginEnd="40px"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/Sent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4px"
                        android:layout_marginTop="-7dp"
                        android:layout_marginEnd="4px"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="10dp"
                        android:text="Sign In"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17px"
                        android:gravity="center"
                        android:text="Sign Up"
                        android:textColor="@color/bluegray_600"
                        android:textSize="20sp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>